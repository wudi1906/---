# Global Price Sentinel 配置示例
# 复制此文件为 .env 并填写实际配置

# 应用配置
DEBUG=False
HOST=0.0.0.0
PORT=8101

# 数据库配置
DATABASE_URL=sqlite:///./price_sentinel.db

# 监控配置
CRON_SCHEDULE=0 */12 * * *
MAX_RETRIES=3
RETRY_DELAY=5

# Playwright 配置
HEADLESS=True
BROWSER_TIMEOUT=30000
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# 代理配置（可选）
PROXY_SERVER=
PROXY_USERNAME=
PROXY_PASSWORD=

# Webhook 通知
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
DINGTALK_WEBHOOK_URL=

# 报告配置
REPORTS_DIR=./reports
SCREENSHOTS_DIR=./screenshots
HISTORY_DAYS=7

